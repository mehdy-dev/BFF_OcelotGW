{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost"
  },
  "AllowedHosts": "*",
    "OidcProxy": {
        "LandingPage": "/.auth/login",
        "EnableUserPreferredLandingPages": true,
        "EntraId": {
            "ClientId": "xx",
            "ClientSecret": "xx",
            "TenantId": "xx",
            "Scopes": [
                "openid",
                "profile",
                "offline_access",
                "api://xx/xx.xx"
            ]
        },
        "ReverseProxy": {
            "Routes": {
                "api": {
                    "ClusterId": "api",
                    "Match": {
                        "Path": "{**catch-all}"
                    }
                }
            },
            "Clusters": {
                "api": {
                    "Destinations": {
                        "api/node1": {
                            "Address": "https://localhost:7049/"
                        }
                    }
                }
            }
        }
    }
}
